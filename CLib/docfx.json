{
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
		  "api/index.md"
        ]
      },
	  {
        "src": "docs",
        "files": [
          "**/*.md"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "statictoc"
    ],
    "globalMetadata": {
      "_appName": "CLib",
      "_appTitle": "CLib",
      "_enableSearch": true,
      "pdf": true
    }
  }
}